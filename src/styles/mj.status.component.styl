@require 'includes/index.styl'

/* small screen */
@media only screen and (max-width : 1024px) {
  .large-screen-only {
    display: none;
  }

  .timer, .score, .pause {
    margin-right: 5px;
    margin-left: 5px;
  }
}

/* large screen */
@media only screen and (min-width : 1025px) {
  .small-screen-only {
    display: none;
  }

  .timer, .score {
    margin-right: 30px;
    margin-left: 30px;
    display: inline-block;
  }

  .score {
    min-width: 100px;
  }
}

.timer {
  width: 95px;
  overflow: hidden;
}

.score, .timer {
  text-align: left;
}

.pause {
  float: right;
  text-align: center;
}

.status {
  position: relative;
  color: #FEF2C7;
  /*font-family: "GaramondNineSixDT-Roman", "Lato", Helvetica, Arial, sans-serif;*/
  font-family: museo-slab,Georgia,"Times New Roman",Times,serif;
  width: 100%;
  /*background-image: url('img/statusbar-bg.png');
  background-size: cover;*/
  font-size: 3vh;
  line-height: 5vh;
  text-align: center;
}

span.highlight {
  color: #FFE1A2;
  cursor: pointer;
}

.hints {
  float: left;
  margin-left: 20px;
}

.restart, .pause, .sound, .music {
  float: right;
  margin-right: 20px;
}

.sound {
  width: 18px;
  text-align: left;
}

.undoredo {
  float: left;
  margin-left: 10px;
  color: lightgreen;
}

.undo {
  cursor: pointer;
  margin-left: 10px;
  margin-right: 10px;
}

.redo {
  cursor: pointer;
  margin-left: 10px;
  margin-right: 10px;
}

.hint {
  color: red;
  margin-left: 5px;
  margin-right: 5px;
  cursor: pointer;
}

.hint.available {
  color: lightgreen;
}

.hint.active {
  color: orange;
}

span.disabled {
  color: gray;
}

.middle-block {
  width: 200px;
  text-align: center;
  margin: 0 auto 0 auto;
}

.debug-block {
  position: absolute;
  x: 0;
  y: 0;
  width: 400px;
  text-align: left;
  margin: 0 auto 0 auto;
  z-index: 500;
}

