.tile-outer.free > .tile:hover {
  background-color: lightgray;
}

.tile-shadow {
  position: absolute;
  border: 1px solid gray;
  background-color: lightgray;
  border-radius: 10%;
}

.tile-shadow1 {
  top: 0px;
  left: 0px;
}

.tile-shadow2 {
  opacity: .99;
}

.tile {
  overflow: hidden;
  transform-origin: 50% 50%;
  border: 2px solid gray;
  position: absolute;
  border-radius: 10%;
  cursor: default;
}

.tile-content {
  margin: 5px;
  padding: 0px;
  text-align: left;
}

.tile-content .primary-character-wrap {
  /*width: 100%;*/
  text-align: center;
}

.tile-content .primary-character {
  margin-top: -1px;
  margin-right: 0px;
  margin-bottom: 0px;
}

.tile-content .clear {
  clear: both;
}

.tile-content .secondary-character {
}

.tile-outer.hidden {
  display: none;
}

.tile.layer0  {
  background-color: #FEF2C7;
}

.tile.layer1  {
  background-color: #BEDDBF;
}

.tile.layer2 {
  background-color: #FFE1A2;
}

.tile.layer3  {
  background-color: #FEF2C7;
}

.tile.layer4 {
  background-color: #FEF2C7;
}

.tile.layer5 {
  background-color: #FEAA6E;
}

.tile.selected {
  background-color: #FEAA6E;
}
